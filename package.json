{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "jest-clear": "jest --clearCache",
    "prepare": "husky install .husky && chmod ug+x .husky/*",
    "prettier-check": "npx prettier . --check",
    "prettier-write": "npx prettier . --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,css,json,scss}": [
      "npx prettier --write"
    ]
  },
  "dependencies": {
    "next": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.1.5",
    "@testing-library/react": "14.1.2",
    "@types/jest": "29.5.11",
    "@types/react": "18.2.45",
    "husky": "^8.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.3.3",
    "sass": "^1.78.0",
    "typescript": "5.3.3"
  }
}
